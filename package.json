{
  "name": "give-hope",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:admin": "turbo run dev --filter=@asym/admin",
    "dev:missionary": "turbo run dev --filter=@asym/missionary",
    "dev:donor": "turbo run dev --filter=@asym/donor",
    "dev:all": "turbo run dev --filter=@asym/admin --filter=@asym/missionary --filter=@asym/donor --parallel",
    "build": "turbo run build",
    "build:admin": "turbo run build --filter=@asym/admin",
    "build:missionary": "turbo run build --filter=@asym/missionary",
    "build:donor": "turbo run build --filter=@asym/donor",
    "start": "next start",
    "lint": "turbo run lint",
    "lint:admin": "turbo run lint --filter=@asym/admin",
    "lint:missionary": "turbo run lint --filter=@asym/missionary",
    "lint:donor": "turbo run lint --filter=@asym/donor",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "typecheck": "turbo run typecheck",
    "typecheck:admin": "turbo run typecheck --filter=@asym/admin",
    "typecheck:missionary": "turbo run typecheck --filter=@asym/missionary",
    "typecheck:donor": "turbo run typecheck --filter=@asym/donor",
    "test": "bun run test:unit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:a11y": "playwright test tests/e2e/accessibility.spec.ts",
    "test:perf": "playwright test tests/e2e/performance.spec.ts",
    "verify:e2e": "bun scripts/verify-e2e.mjs",
    "verify:e2e:loop": "bun scripts/verify-e2e-loop.mjs",
    "verify": "./scripts/verify",
    "lighthouse": "lhci autorun",
    "generate:icons": "node scripts/generate-icons.js",
    "setup": "./scripts/setup",
    "setup:verify": "bash ./scripts/setup-verify.sh",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "clean:cache": "rm -rf .turbo node_modules/.cache",
    "prepare": "husky"
  },
  "dependencies": {
    "@asym/auth": "workspace:*",
    "@asym/config": "workspace:*",
    "@asym/database": "workspace:*",
    "@asym/email": "workspace:*",
    "@asym/graphql": "workspace:*",
    "@asym/lib": "workspace:*",
    "@asym/ui": "workspace:*",
    "@google/genai": "^1.34.0",
    "@sendgrid/eventwebhook": "^8.0.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tiptap/extension-link": "^3.14.0",
    "@tiptap/extension-underline": "^3.14.0",
    "@tiptap/pm": "^3.14.0",
    "graphql": "16.12.0",
    "graphql-yoga": "5.17.1",
    "require-in-the-middle": "^8.0.1",
    "shadcn": "^3.6.1",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@lhci/cli": "^0.15.0",
    "@playwright/test": "^1.49.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "canvas": "^3.2.1",
    "clsx": "^2.1.1",
    "eslint": "^9",
    "eslint-config-next": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4",
    "turbo": "^2.7.5",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.3",
    "vitest": "^2.1.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
