# Supabase (required for core app + API routes)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database connection (optional; used for migrations/maintenance)
DATABASE_URL=postgresql://postgres.your-project:your-password@aws-0-us-east-1.pooler.supabase.com:5432/postgres

# Site + SEO (optional; defaults used in code)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
GOOGLE_SITE_VERIFICATION=
BING_SITE_VERIFICATION=

# Stripe (required for live donation processing)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Unlayer Email/PDF Studio (optional; enables advanced features/export)
NEXT_PUBLIC_UNLAYER_PROJECT_ID=
NEXT_PUBLIC_UNLAYER_WHITE_LABEL=false
NEXT_PUBLIC_UNLAYER_ALLOWED_DOMAINS=

# Branding (optional; used in Email/PDF Studio)
NEXT_PUBLIC_BRAND_NAME=GiveHope
NEXT_PUBLIC_BRAND_LOGO_URL=
NEXT_PUBLIC_BRAND_PRIMARY_COLOR=#0f172a
NEXT_PUBLIC_BRAND_ACCENT_COLOR=#2563eb
NEXT_PUBLIC_EMAIL_FOOTER_TEXT=
NEXT_PUBLIC_PDF_FOOTER_TEXT=

# Cloudinary (optional; enable image uploads)
NEXT_PUBLIC_CLOUDINARY_ENABLED=false
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
NEXT_PUBLIC_CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Monitoring (optional)
NEXT_PUBLIC_SENTRY_DSN=

# Cron + demo accounts (optional, recommended for production)
CRON_SECRET=
ALLOW_DEMO_ACCOUNTS=false

# SendGrid webhook integration (optional)
SENDGRID_WEBHOOK_VERIFICATION_KEY=
EMAIL_ENCRYPTION_KEY=

# Testing/CI (optional)
PLAYWRIGHT_BASE_URL=http://localhost:3000
VERIFY_E2E_PROJECTS=
CI=

# Multitenant routing (optional; defaults to localhost:3000)
NEXT_PUBLIC_MAIN_DOMAIN=localhost:3000
