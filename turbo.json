{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "globalEnv": [
    "NODE_ENV",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "VERCEL_GIT_COMMIT_SHA"
  ],
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "GOOGLE_SITE_VERIFICATION",
        "BING_SITE_VERIFICATION",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE_KEY",
        "SUPABASE_*"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*"]
    },
    "lint": {
      "dependsOn": ["transit"],
      "outputs": [".next/cache/eslint/**", ".eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["transit"],
      "outputs": ["tsconfig.tsbuildinfo", "*.tsbuildinfo"]
    },
    "test": {
      "dependsOn": ["transit"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "test:unit": {
      "dependsOn": ["transit"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test:e2e": {
      "cache": false
    },
    "test:e2e:ui": {
      "cache": false,
      "persistent": true
    },
    "test:a11y": {
      "cache": false
    },
    "test:perf": {
      "cache": false
    },
    "lighthouse": {
      "cache": false
    },
    "verify": {
      "cache": false
    },
    "verify:e2e": {
      "cache": false
    },
    "verify:e2e:loop": {
      "cache": false,
      "persistent": true
    },
    "generate:icons": {
      "cache": false
    },
    "setup": {
      "cache": false
    },
    "setup:verify": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
